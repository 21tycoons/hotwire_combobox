<%= tag.ul **component.listbox_attrs do |ul| %>
  <%= tag.div **component.listbox_options_attrs do %>
    <% component.options.each do |option| %>
      <%= render option %>
    <% end %>
  <% end %>

  <% if component.paginated? %>
    <%= render "hotwire_combobox/pagination", **component.pagination_attrs %>
  <% end %>
<% end %>
